# Images pulled from registry in production
FRONTEND_IMAGE=ghcr.io/your-org/bot-mox-frontend:main-latest
BACKEND_IMAGE=ghcr.io/your-org/bot-mox-backend:main-latest

# Repo prefixes for deploy/rollback scripts
FRONTEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-frontend
BACKEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-backend

# Caddy routing
CADDY_EMAIL=ops@example.com
APP_DOMAIN=app.example.com
API_DOMAIN=api.example.com
S3_DOMAIN=s3.example.com
HTTP_PORT=80
HTTPS_PORT=443

# Backend runtime
NODE_ENV=production
BACKEND_PORT=3001
DATA_BACKEND=supabase
CORS_ORIGIN=https://app.example.com
INTERNAL_API_TOKEN=replace-me
INTERNAL_INFRA_TOKEN=replace-me
ALLOW_INSECURE_DEV_TOKENS=false
LICENSE_LEASE_SECRET=replace-with-long-random-secret

# Firebase (if still required during migration phase)
FIREBASE_SERVICE_ACCOUNT_PATH=
FIREBASE_DATABASE_URL=
FIREBASE_PROJECT_ID=

# Supabase
SUPABASE_URL=https://supabase.example.com
SUPABASE_SERVICE_ROLE_KEY=replace-me
REQUIRE_SUPABASE_READY=true

# MinIO / S3
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=replace-me
MINIO_BUCKET=botmox-artifacts
MINIO_API_BIND_PORT=9000
MINIO_CONSOLE_BIND_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET_ARTIFACTS=botmox-artifacts
S3_ACCESS_KEY_ID=replace-me
S3_SECRET_ACCESS_KEY=replace-me
S3_FORCE_PATH_STYLE=true
S3_PRESIGN_TTL_SECONDS=180
REQUIRE_S3_READY=true
