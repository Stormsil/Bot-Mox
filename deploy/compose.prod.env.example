# Images pulled from registry in production
FRONTEND_IMAGE=ghcr.io/your-org/bot-mox-frontend:main-latest
BACKEND_IMAGE=ghcr.io/your-org/bot-mox-backend:main-latest

# Repo prefixes for deploy/rollback scripts
FRONTEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-frontend
BACKEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-backend

# Caddy routing
CADDY_EMAIL=ops@example.com
APP_DOMAIN=app.example.com
API_DOMAIN=api.example.com
S3_DOMAIN=s3.example.com
SUPABASE_DOMAIN=supabase.example.com
HTTP_PORT=80
HTTPS_PORT=443

# Frontend runtime (docker runtime-config.js)
VITE_API_BASE_URL=https://api.example.com
VITE_WS_BASE_URL=wss://api.example.com
VITE_OTEL_ENABLED=0
VITE_OTEL_SERVICE_NAME=bot-mox-frontend
VITE_OTEL_EXPORTER_OTLP_ENDPOINT=

# Backend runtime
NODE_ENV=production
BACKEND_PORT=3001
DATA_BACKEND=supabase
CORS_ORIGIN=https://app.example.com
INTERNAL_API_TOKEN=replace-me
INTERNAL_INFRA_TOKEN=replace-me
ALLOW_INSECURE_DEV_TOKENS=false
LICENSE_LEASE_SECRET=replace-with-long-random-secret
AGENT_AUTH_SECRET=replace-with-long-random-secret
AGENT_TOKEN_TTL_SECONDS=2592000
AGENT_PAIRING_PUBLIC_URL=https://api.example.com

# Observability (off by default in production)
BOTMOX_OTEL_ENABLED=0
BOTMOX_OTEL_PROXY_ENABLED=0
BOTMOX_DIAGNOSTICS_ENABLED=0
OTEL_SERVICE_NAME=bot-mox-backend
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=

# Supabase (self-hosted core)
SUPABASE_PUBLIC_URL=https://supabase.example.com
SUPABASE_JWT_ISSUER=https://supabase.example.com/auth/v1
SUPABASE_SITE_URL=https://app.example.com
SUPABASE_URI_ALLOW_LIST=https://app.example.com
SUPABASE_DISABLE_SIGNUP=true
SUPABASE_MAILER_AUTOCONFIRM=true
SUPABASE_DB_PASSWORD=replace-me
SUPABASE_JWT_SECRET=replace-me-long-random-32-chars-min
SUPABASE_ANON_KEY=replace-me
# Backend talks to Supabase via internal Kong service in the same stack:
SUPABASE_URL=http://supabase-kong:8000
SUPABASE_SERVICE_ROLE_KEY=replace-me
SUPABASE_ADMIN_EMAILS=
SUPABASE_ADMIN_USER_IDS=
REQUIRE_SUPABASE_READY=true

# MinIO / S3
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=replace-me
MINIO_BUCKET=botmox-artifacts
MINIO_API_BIND_PORT=9000
MINIO_CONSOLE_BIND_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET_ARTIFACTS=botmox-artifacts
S3_BUCKET_THEME_ASSETS=botmox-theme-assets
S3_ACCESS_KEY_ID=replace-me
S3_SECRET_ACCESS_KEY=replace-me
S3_FORCE_PATH_STYLE=true
S3_PRESIGN_TTL_SECONDS=180
REQUIRE_S3_READY=true
