# Image tags built locally by scripts/stack-prod-sim-up.*
FRONTEND_IMAGE=bot-mox/frontend:prod-sim
BACKEND_IMAGE=bot-mox/backend:prod-sim

# Optional image repo prefixes (used by deploy/rollback scripts if IMAGE_TAG is provided)
FRONTEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-frontend
BACKEND_IMAGE_REPO=ghcr.io/your-org/bot-mox-backend

# Caddy routing
CADDY_EMAIL=ops@example.com
APP_DOMAIN=app.localhost
API_DOMAIN=api.localhost
S3_DOMAIN=s3.localhost
HTTP_PORT=80
HTTPS_PORT=443

# Frontend runtime
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_BASE_URL=ws://localhost:3001

# Backend runtime
NODE_ENV=production
BACKEND_PORT=3001
DATA_BACKEND=rtdb
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
INTERNAL_API_TOKEN=change-me-api-token
INTERNAL_INFRA_TOKEN=change-me-infra-token
ALLOW_INSECURE_DEV_TOKENS=true
LICENSE_LEASE_SECRET=change-me-very-long-random-secret

# Firebase (optional for local prod-sim)
FIREBASE_SERVICE_ACCOUNT_PATH=
FIREBASE_DATABASE_URL=
FIREBASE_PROJECT_ID=

# Supabase (required when DATA_BACKEND=supabase)
SUPABASE_URL=http://host.docker.internal:54321
SUPABASE_SERVICE_ROLE_KEY=
REQUIRE_SUPABASE_READY=false

# MinIO / S3
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio-root
MINIO_BUCKET=botmox-artifacts
MINIO_API_BIND_PORT=9000
MINIO_CONSOLE_BIND_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET_ARTIFACTS=botmox-artifacts
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=change-me-minio-root
S3_FORCE_PATH_STYLE=true
S3_PRESIGN_TTL_SECONDS=300
REQUIRE_S3_READY=false
