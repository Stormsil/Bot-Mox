{
  "name": "@botmox/agent",
  "version": "0.1.0",
  "description": "Bot-Mox Desktop Agent â€” Windows tray app for Proxmox VM operations",
  "main": "dist/main/index.js",
  "scripts": {
    "copy-static": "node -e \"const fs=require('fs'),p=require('path');const s=p.join('src','ui'),d=p.join('dist','ui');fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).filter(f=>!f.endsWith('.ts')).forEach(f=>fs.copyFileSync(p.join(s,f),p.join(d,f)));console.log('Static files copied')\"",
    "dev": "tsc && pnpm run copy-static && node scripts/run-electron-dev.js",
    "build": "tsc && pnpm run copy-static && electron-builder --win portable",
    "lint": "pnpm --dir ../.. exec biome check apps/agent/src",
    "typecheck": "tsc --noEmit",
    "contract:check": "pnpm --filter @botmox/api-contract contract:check",
    "test": "node scripts/run-tests.cjs && pnpm run typecheck",
    "check": "pnpm run typecheck",
    "clean": "rimraf dist"
  },
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@botmox/api-contract": "workspace:*",
    "ssh2": "^1.17.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/ssh2": "^1.15.5",
    "@types/ws": "^8.18.1",
    "@types/node": "^22.0.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  }
}
