{
  "name": "@botmox/api",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "build": "tsc -p tsconfig.json",
    "lint": "pnpm --dir ../.. exec biome check apps/api/src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "contract:check": "pnpm run typecheck",
    "check": "pnpm run typecheck && pnpm run build"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.14",
    "@nestjs/core": "^11.1.14",
    "@nestjs/platform-express": "^11.1.14",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.25.76",
    "@botmox/api-contract": "workspace:*",
    "@botmox/database-schema": "workspace:*",
    "@botmox/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@types/express": "^5.0.1",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
