{
  "name": "botmox-project",
  "version": "1.0.0",
  "description": "Bot-Mox Project - Bot Farm Management System",
  "private": true,
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:trace": "node scripts/dev-trace.js",
    "doctor": "node scripts/doctor.js",
    "dev:backend": "pnpm --filter @botmox/backend dev",
    "dev:backend:nest": "pnpm run dev:backend",
    "dev:frontend": "pnpm --filter @botmox/frontend dev",
    "dev:supabase:start": "corepack pnpm exec supabase start",
    "dev:supabase:stop": "corepack pnpm exec supabase stop",
    "dev:supabase:status": "corepack pnpm exec supabase status",
    "dev:supabase:bootstrap-env": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/bootstrap-supabase-env.ps1",
    "supabase:create-user": "node scripts/supabase-create-user.js",
    "supabase:generate-keys": "node scripts/supabase-generate-keys.js",
    "check:docker:wsl": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/check-docker-wsl.ps1",
    "dev:docker:up": "docker compose -f docker-compose.local.yml up",
    "dev:docker:down": "docker compose -f docker-compose.local.yml down",
    "stack:dev:up": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-dev-up.ps1",
    "stack:dev:down": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-dev-down.ps1",
    "stack:dev:ps": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-dev-ps.ps1",
    "stack:dev:logs": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-dev-logs.ps1",
    "stack:prod-sim:up": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-prod-sim-up.ps1",
    "stack:prod-sim:down": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-prod-sim-down.ps1",
    "stack:logs": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-logs.ps1",
    "stack:ps": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stack-ps.ps1",
    "deploy:plan": "bash scripts/deploy-vps.sh --dry-run",
    "deploy:vps": "bash scripts/deploy-vps.sh",
    "deploy:local:up": "pnpm run stack:prod-sim:up",
    "deploy:local:down": "pnpm run stack:prod-sim:down",
    "deploy:local:restart": "pnpm run stack:prod-sim:down && pnpm run stack:prod-sim:up",
    "deploy:local:ps": "pnpm run stack:ps",
    "deploy:local:logs": "pnpm run stack:logs",
    "dev:prodlike:up": "pnpm run stack:dev:up",
    "dev:prodlike:down": "pnpm run stack:dev:down",
    "dev:prodlike:restart": "pnpm run stack:dev:down && pnpm run stack:dev:up",
    "dev:prodlike:ps": "pnpm run stack:dev:ps",
    "dev:prodlike:logs": "pnpm run stack:dev:logs",
    "install:all": "pnpm install --recursive",
    "agent:dev": "pnpm --filter @botmox/agent dev",
    "agent:build": "pnpm --filter @botmox/agent build",
    "agent:typecheck": "pnpm --filter @botmox/agent typecheck",
    "build": "pnpm --filter @botmox/frontend build",
    "build:mono": "pnpm turbo run build",
    "lint": "pnpm --filter @botmox/frontend lint",
    "lint:mono": "pnpm turbo run lint",
    "typecheck:mono": "pnpm turbo run typecheck",
    "dev:mono": "pnpm turbo run dev --parallel --filter=@botmox/frontend --filter=@botmox/backend --filter=@botmox/agent",
    "db:types": "pnpm --filter @botmox/database-schema db:types",
    "db:types:check": "pnpm --filter @botmox/database-schema db:types:check",
    "contract:check": "pnpm --filter @botmox/api-contract contract:check",
    "check:infra:gateway": "node scripts/check-infra-gateway.cjs",
    "check:pnpm:first": "node scripts/check-pnpm-first.js",
    "check:zod:boundaries": "node scripts/check-zod-boundaries.js",
    "check:ui:boundaries": "node scripts/check-ui-boundaries.js",
    "check:entities:service-boundary": "node scripts/check-entities-service-boundary.js",
    "check:vm:provider-boundary": "node scripts/check-vm-provider-boundary.js",
    "audit:antd6:gate": "node scripts/check-antd6-compatibility.js",
    "audit:antd6:scan": "node scripts/check-antd6-api-usage.js",
    "audit:antd6:e2e": "pnpm --filter @botmox/frontend test:e2e",
    "audit:antd6:gate:full": "pnpm run audit:antd6:gate && pnpm run audit:antd6:scan -- --strict && pnpm run audit:antd6:e2e",
    "biome:check:mono": "pnpm exec biome check apps packages configs scripts start-dev.js apps/agent/src apps/frontend/src apps/backend/src",
    "biome:write:mono": "pnpm exec biome check apps packages configs scripts start-dev.js apps/agent/src apps/frontend/src apps/backend/src --write",
    "check:no-any:mono": "node scripts/check-no-any-mono.js",
    "check:legacy:naming": "node scripts/check-legacy-naming-cutover.js",
    "check:all:mono": "pnpm turbo run check db:types:check contract:check && pnpm run biome:check:mono && pnpm run check:no-any:mono && pnpm run check:pnpm:first && pnpm run check:legacy:naming && pnpm run check:zod:boundaries && pnpm run check:ui:boundaries && pnpm run check:entities:service-boundary && pnpm run check:vm:provider-boundary && pnpm run check:infra:gateway",
    "check:types": "pnpm --filter @botmox/frontend typecheck",
    "check:bundle:budgets": "node scripts/check-bundle-budgets.js",
    "check:theme:contrast": "node scripts/check-theme-contrast.js",
    "check:secrets": "node scripts/check-secrets.js",
    "check:backend:logging": "node scripts/check-backend-console.js",
    "check:frontend:logging": "node scripts/check-frontend-console.js",
    "check:backend:syntax": "pnpm --filter @botmox/backend typecheck",
    "check:backend:smoke": "pnpm --filter @botmox/backend build && pnpm run check:infra:gateway",
    "smoke:artifacts:e2e": "node scripts/artifacts-e2e-smoke.js",
    "audit:firebase:decommission": "node scripts/generate-firebase-decommission-audit.js",
    "check:all": "pnpm run check:styles:guardrails && pnpm run check:theme:contrast && pnpm run lint && pnpm run check:types && pnpm run build && pnpm run check:bundle:budgets && pnpm run check:secrets && pnpm run check:frontend:logging && pnpm run check:backend:logging && pnpm run check:backend:syntax && pnpm run check:backend:smoke && pnpm run audit:firebase:decommission",
    "obs:up": "docker compose -f deploy/compose.observability.yml up -d",
    "obs:down": "docker compose -f deploy/compose.observability.yml down",
    "test:e2e": "pnpm --filter @botmox/frontend test:e2e",
    "test:e2e:prodlike": "node scripts/e2e-prodlike.js",
    "test:e2e:report": "pnpm --filter @botmox/frontend test:e2e:report",
    "smoke:prodlike": "pnpm run doctor && pnpm run test:e2e:prodlike",
    "mcp:antd:setup": "node scripts/setup-mcp-antd-docs.js",
    "mcp:antd:test": "node node_modules/mcp-antd-components/scripts/test-server.mjs",
    "check:styles:guardrails": "node scripts/check-style-guardrails.js"
  },
  "keywords": [
    "bot-farm",
    "management",
    "supabase"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "concurrently": "^9.1.2",
    "mcp-antd-components": "github:hannesj/mcp-antd-components",
    "pnpm": "^10.30.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
